{
  "manifest_version": 3,
  "name": "Focus Shield",
  "description": "Blocks distracting websites to protect deep focus.",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "storage",
    "alarms"
  ],
  "host_permissions": ["<all_urls>"]
  
}
